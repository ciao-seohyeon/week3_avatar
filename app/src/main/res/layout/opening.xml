<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:src="@drawable/fairy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/speech_bubble_fairy"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        >

        <com.antonionicolaspina.revealtextview.RevealTextView
            android:id="@+id/speechBubble"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="30dp"
            android:text=""
            app:rtv_duration="2000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:weightSum="3">

            <Button
                android:id="@+id/yesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네"
                android:visibility="invisible"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/noButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아니요"
                android:visibility="invisible"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="패션 요정이 뭐야?"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
